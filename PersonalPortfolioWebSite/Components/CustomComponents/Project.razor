@using PersonalPortfolioWebSite.Models;


<article class="project-card">
    @if (project != null)
    {
        <h3>@project.Name</h3>
        <div>@((MarkupString)project.Description)</div>
        @if (project.Technologies != null && project.Technologies.Count > 0)
        {
            <h4>Verwendete Skills:</h4>
            <ul>
                @foreach (var technology in project.Technologies)
                {
                    <li>
                        <Skill SkillModel="@technology" IsCollapsed="true" />
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No technologies listed.</p>
        }
    }
    else
    {
        <p>Project data is not available.</p>
    }
</article>  
    
@code {
    [Parameter]
    required public ProjectModel project { get; set; }
}
